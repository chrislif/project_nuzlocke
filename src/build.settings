--
-- For more information on build.settings, see the Project Build Settings guide at:
-- https://docs.coronalabs.com/guide/distribution/buildSettings
--

settings =
{
	orientation =
	{
		-- Supported values for orientation:
		-- portrait, portraitUpsideDown, landscapeLeft, landscapeRight
		default = "portrait",
		supported = { "portrait", },
	},

	--
	-- Android section
	--
	android =
	{
		usesPermissions =
		{
			"android.permission.INTERNET",
		},
	},

	--
	-- iOS section
	--
	iphone =
	{
		plist =
		{
			UIStatusBarHidden = false,
			UILaunchStoryboardName = "LaunchScreen",
			CFBundleIconFiles =
			{
				"ico/Icon-40.png",
				"ico/Icon-58.png",
				"ico/Icon-76.png",
				"ico/Icon-80.png",
				"ico/Icon-87.png",
				"ico/Icon-120.png",
				"ico/Icon-152.png",
				"ico/Icon-167.png",
				"ico/Icon-180.png",
			},
		},
	},

	--
	-- Plugins section
	--
	plugins =
	{

	},

	--
	-- Project section
	--
	excludeFiles =
	{
		-- Exclude unnecessary files for each platform
		ios = { "ico/Icon.png", "ico/Icon-*dpi.png", },
		android = { "ico/Icon.png", "ico/Icon-??.png", "ico/Icon-???.png", "LaunchScreen.storyboardc", },
	},
}
